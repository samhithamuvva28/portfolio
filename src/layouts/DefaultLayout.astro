---
import "../styles/global.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import SocialBar from "../components/SocialBar.astro";
import Blog from "../components/Blog.astro";
import Publications from "../components/Publications.astro";
import Conferences from "../components/Conferences.astro";
import Contact from "../components/Contact.astro";
---
<!doctype html>
<html lang="en" style="font-size: 16px">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Samhitha Muvva</title>
    <meta name="description" content="Personal portfolio" />
    <link rel="icon" href="/favicon.svg" type="image/svg+xml" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Source+Sans+3:wght@400;600;700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=DM+Serif+Display:ital@0;1&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;500;600;700&display=swap" rel="stylesheet">
    <style is:global>
      /* Reduce vertical size of each section site-wide */
      section[id] { padding-top: 2rem; padding-bottom: 2rem; }
      @media (min-width: 768px) { section[id] { padding-top: 3rem; padding-bottom: 3rem; } }
      /* Keep About anchor offset comfortable but tighter bottom */
      section#about { padding-top: 4rem; padding-bottom: 2rem; }
      /* Smaller section headings site-wide */
      section[id] > h2 { font-size: 1.25rem; line-height: 1.75rem; }
      @media (min-width: 768px) { section[id] > h2 { font-size: 1.5rem; line-height: 2rem; } }
      /* Left-align all section headings but keep them within a centered content width */
      section[id] > h2 { text-align: left; max-width: 72rem; margin-left: auto; margin-right: auto; padding-left: 1rem; padding-right: 1rem; }
      /* Center section content blocks under the headings */
      section[id] > *:not(h2) { max-width: 72rem; margin-left: auto; margin-right: auto; }
      /* Cursor ripple that follows the pointer */
      :root { --ripple-x: -100px; --ripple-y: -100px; }
      .cursor-ripple {
        position: fixed;
        inset: 0;
        pointer-events: none;
        z-index: 50;
        background:
          radial-gradient(80px circle at var(--ripple-x) var(--ripple-y), rgba(21, 84, 60, 0.22), rgba(21, 84, 60, 0) 65%),
          radial-gradient(220px circle at var(--ripple-x) var(--ripple-y), rgba(21, 84, 60, 0.10), rgba(21, 84, 60, 0) 70%);
      }

      /* Subtle background style samples */
      :root { --bg-base: #EAF7EF; --bg-accent: #15543c; }
      body.bg-plain { background-color: var(--bg-base); background-image: none; }
      body.bg-soft { /* soft radial gradient */
        background:
          radial-gradient(1000px 1000px at 50% 10%, rgba(21,84,60,0.06), transparent 60%),
          var(--bg-base);
      }
      body.bg-glow { /* two-corner glow */
        background:
          radial-gradient(40vw 40vw at 0% 0%, rgba(21,84,60,0.08), transparent 60%),
          radial-gradient(40vw 40vw at 100% 100%, rgba(21,84,60,0.08), transparent 60%),
          var(--bg-base);
      }
      body.bg-grid {
        background-color: var(--bg-base);
        background-image:
          linear-gradient(to right, rgba(21,84,60,0.06) 1px, transparent 1px),
          linear-gradient(to bottom, rgba(21,84,60,0.06) 1px, transparent 1px);
        background-size: 24px 24px, 24px 24px;
      }
      body.bg-hatch {
        background-color: var(--bg-base);
        background-image: repeating-linear-gradient(135deg, rgba(21,84,60,0.05) 0 1px, transparent 1px 12px);
      }
      body.bg-dots {
        background-color: var(--bg-base);
        background-image: radial-gradient(rgba(21,84,60,0.08) 1px, transparent 1px);
        background-size: 20px 20px;
        background-position: 0 0;
      }
      .texture-overlay {
        position: fixed; inset: 0; pointer-events: none; z-index: 2; opacity: .03; display: none;
        background-image: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" viewBox="0 0 64 64"><filter id="n"><feTurbulence type="fractalNoise" baseFrequency="0.8" numOctaves="4" stitchTiles="stitch"/></filter><rect width="100%" height="100%" filter="url(%23n)"/></svg>');
        mix-blend-mode: multiply;
      }
      body.bg-noise .texture-overlay { display: block; }
      /* Small selector pill (desktop only) */
    </style>
  </head>
  <body class="bg-[#EAF7EF] text-zinc-900 antialiased" style="font-family: 'Times New Roman', Times, serif;">
    <Header />
    <main id="top" class="mx-auto max-w-7xl px-4 md:px-6">
      <slot />
    </main>
    <Conferences />
    <Publications />
    <Blog />
    <Contact />
    <SocialBar />
    <Footer />
    <div id="texture-overlay" class="texture-overlay" aria-hidden="true"></div>
    <div class="cursor-ripple" aria-hidden="true"></div>
    <script>
      (function () {
        try {
          if (window.matchMedia && window.matchMedia('(prefers-reduced-motion: reduce)').matches) return;
          var root = document.documentElement;
          var x = -100, y = -100;
          var rafId = 0;
          function animate() {
            root.style.setProperty('--ripple-x', x + 'px');
            root.style.setProperty('--ripple-y', y + 'px');
            rafId = 0;
          }
          window.addEventListener('mousemove', function (e) {
            x = e.clientX; y = e.clientY;
            if (!rafId) rafId = requestAnimationFrame(animate);
          }, { passive: true });
        } catch (e) {}
      })();
    </script>
    
  </body>
</html>
