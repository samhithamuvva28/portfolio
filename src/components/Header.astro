<header class="sticky top-0 z-40 border-b bg-[#EAF2FF]/80 backdrop-blur supports-[backdrop-filter]:bg-[#EAF2FF]/60 relative">
  <div class="mx-auto max-w-7xl px-4 md:px-6 h-16 flex items-center justify-between">
    <a href="#top" class="font-medium tracking-widest uppercase text-sm sm:text-base" style="font-family: 'Space Grotesk', system-ui, -apple-system, 'Segoe UI', Roboto, Arial, sans-serif;">SAMHITHA MUVVA</a>
    <nav class="hidden sm:flex items-center gap-6 text-sm">
      <a href="#about" class="hover:text-[#15543c]">About</a>
      <a href="#education" class="hover:text-[#15543c]">Education</a>
      <a href="#work" class="hover:text-[#15543c]">Work</a>
      <a href="#projects" class="hover:text-[#15543c]">Projects</a>
    </nav>
    <button id="menu-toggle" type="button" aria-label="Open menu" aria-expanded="false" class="sm:hidden inline-flex items-center justify-center p-2 rounded-md border border-zinc-300 text-zinc-700">
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="22" height="22" fill="currentColor" aria-hidden="true">
        <path d="M3 6h18v2H3V6zm0 5h18v2H3v-2zm0 5h18v2H3v-2z" />
      </svg>
    </button>
  </div>
  <div id="mobile-menu" class="hidden sm:hidden absolute inset-x-0 top-16 border-b bg-[#EAF2FF]">
    <nav class="flex flex-col gap-4 px-4 py-4 text-sm">
      <a href="#about" class="py-1 hover:text-[#15543c]">About</a>
      <a href="#education" class="py-1 hover:text-[#15543c]">Education</a>
      <a href="#work" class="py-1 hover:text-[#15543c]">Where I’ve Worked</a>
      <a href="#projects" class="py-1 hover:text-[#15543c]">What I’ve Done</a>
    </nav>
  </div>
  <script is:inline>
    (function(){
      const btn = document.getElementById('menu-toggle');
      const panel = document.getElementById('mobile-menu');
      if(!btn || !panel) return;
      function close(){ panel.classList.add('hidden'); btn.setAttribute('aria-expanded','false'); }
      function open(){ panel.classList.remove('hidden'); btn.setAttribute('aria-expanded','true'); }
      btn.addEventListener('click', () => {
        if(panel.classList.contains('hidden')) open(); else close();
      });
      panel.querySelectorAll('a').forEach((a) => a.addEventListener('click', close));
      document.addEventListener('keydown', (e) => { if(e.key === 'Escape') close(); });
    })();
  </script>
</header>
